<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context=".meditasi.MenuMeditasiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_rekomendasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Rekomendasi dari kami"
            android:layout_marginTop="30dp"
            android:textStyle="italic"
            app:layout_constraintTop_toTopOf="@+id/cv_test_psikologi" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_test_psikologi"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cv_gradient_blue">

        <TextView
            android:id="@+id/tv_test_psikologi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif-medium"
            android:text="Meditasi Dasar"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tugas"
                android:layout_alignParentStart="true"
                android:layout_marginTop="145dp"
                android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/tv_jumlah_meditasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="147dp"
            android:layout_marginLeft="60dp"
            android:fontFamily="sans-serif-medium"
            android:text="5 Test"
            android:textSize="14dp"
            android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_mulai_test"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/btn_rounded_putih"
                android:text="Pilih Meditasi"
                android:textAllCaps="false"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:textStyle="bold"
                android:onClick="masukSesi"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_lainnya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Meditasi Lainnya"
            android:layout_marginTop="30dp"
            android:textStyle="italic"
            app:layout_constraintTop_toTopOf="@+id/cv_test_psikologi" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_test_psikologi2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cv_gradient_orange">

                <TextView
                    android:id="@+id/tv_test_psikologi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Meditasi Lega"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_test2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_tugas"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="145dp"
                    android:layout_marginLeft="30dp"/>

                <TextView
                    android:id="@+id/tv_jumlah_tes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="147dp"
                    android:layout_marginLeft="60dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="3 Test"
                    android:textSize="14dp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btn_pilih_meditasi"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="130dp"
                    android:background="@drawable/btn_rounded_putih"
                    android:text="Pilih Meditasi"
                    android:textAllCaps="false"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/mediumPurple"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:onClick="masukTunggu"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>